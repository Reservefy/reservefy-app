{
  "expo": {
    "name": "Reservefy",
    "slug": "Reservefy",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/icon.png",
    "scheme": "reservefyapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "CFBundleAllowMixedLocalizations": true
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./src/assets/images/favicon.png"
    },
    "plugins": [
      "expo-localization",
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./src/assets/images/splash-icon.png",
          "imageWidth": 200,
          "imageHeight": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-font",
        {
          "fonts": [
            "./src/assets/fonts/Montserrat-Regular.ttf",
            "./src/assets/fonts/Montserrat-Medium.ttf",
            "./src/assets/fonts/Montserrat-Bold.ttf",
            "./src/assets/fonts/Montserrat-Light.ttf"
          ],
          "android": {
            "fonts": [
              {
                "fontFamily": "Montserrat",
                "fontDefinitions": [
                  {
                    "path": "./src/assets/fonts/Montserrat-Regular.ttf",
                    "weight": 400
                  },
                  {
                    "path": "./src/assets/fonts/Montserrat-Medium.ttf",
                    "weight": 500
                  },
                  {
                    "path": "./src/assets/fonts/Montserrat-Bold.ttf",
                    "weight": 700
                  }
                ]
              }
            ]
          }
        }
      ]
    ],
    "locales": {
      "en": "./src/locales/en.json",
      "ru": "./src/locales/ru.json",
      "uz": "./src/locales/uz.json"
    },
    "experiments": {
      "typedRoutes": true,
      "tsconfigPaths": true
    },
    "extra": {
      "supportsRTL": true,
      "forcesRTL": true
    }
  }
}
