{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@constants/*": ["src/constants/*"],
      "@hooks/*": ["src/hooks/*"],
      "@screens/*": ["src/screens/*"],
      "@assets/*": ["src/assets/*"],
      "@utils/*": ["src/utils/*"],
      "@services/*": ["src/services/*"],
      "@locales/*": ["src/locales/*"],
      "@providers/*": ["src/providers/*"],
      "@types/*": ["src/types/*"],
      "@styles/*": ["src/styles/*"],
      "@stores/*": ["src/stores/*"],
      "@lib/*": ["src/lib/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.ttf",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "**/*.ttf",
    "nativewind-env.d.ts"
  ]
}
